<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/item_padding">


    <FrameLayout
        android:id="@+id/picFrame"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/QRcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:scaleType="fitCenter"
            android:contentDescription="@null"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/order_qr_frame" />
    </FrameLayout>


    <TextView
        android:id="@+id/storeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/picFrame"
        android:layout_toRightOf="@id/picFrame"
        android:text="我是店铺名"
        android:textColor="@color/first_text_color" />

    <TextView
        android:text="射箭/射击"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF9900"
        android:textSize="@dimen/text_size_small"
        android:id="@+id/type"
        android:layout_below="@+id/storeName"
        android:layout_alignLeft="@+id/storeName"
        android:layout_alignStart="@+id/storeName" />

    <TextView
        android:text="场地0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="#FF9900"
        android:id="@+id/orderPass"
        android:layout_below="@+id/storeName"
        android:layout_toRightOf="@+id/type"
        android:layout_toEndOf="@+id/type"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/orderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-07-23"
        android:textColor="@color/second_text_color"
        android:textSize="@dimen/text_size_small"
        android:layout_below="@+id/type"
        android:layout_alignLeft="@+id/type"
        android:layout_alignStart="@+id/type" />

    <TextView
        android:id="@+id/orderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:00"
        android:textColor="@color/second_text_color"
        android:textSize="@dimen/text_size_small"
        android:layout_alignBaseline="@+id/orderDate"
        android:layout_alignBottom="@+id/orderDate"
        android:layout_toRightOf="@+id/orderDate"
        android:layout_toEndOf="@+id/orderDate"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

</RelativeLayout>