<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_qr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jhobor.ddc.activity.QRActivity">

    <include layout="@layout/bar_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/userPic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/me_user_ic" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:drawableEnd="@mipmap/me_head_pic"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/me_head_pic"
            android:text="高手中的高手"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_subtitle" />
    </LinearLayout>

    <ImageView
        android:id="@+id/qrCode"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/qr_code_bg"
        android:padding="10dp"
        android:src="@mipmap/qr_code_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="扫一扫上面的二维码，加我为好友"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_subtitle" />

</LinearLayout>
