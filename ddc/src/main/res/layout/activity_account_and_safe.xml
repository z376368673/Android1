<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_and_safe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBg"
    tools:context="com.jhobor.ddc.activity.AccountAndSafeActivity">

    <include layout="@layout/bar_top" />

    <TableRow
        style="@style/tr_bg_white"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/tv_weight1"
            android:text="帐号"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/account"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:gravity="end"
            android:text="123456" />
    </TableRow>

    <TableRow style="@style/tr_bg_white">

        <TextView
            style="@style/tv_weight1"
            android:text="手机号码"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/phone"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:gravity="end"
            android:text="18676690358" />
    </TableRow>

    <TableRow
        android:id="@+id/modifyPwd"
        style="@style/tr_bg_white">

        <TextView
            style="@style/tv_weight1"
            android:text="修改密码"
            android:textColor="@color/black" />

        <ImageView
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/me_item_enter" />
    </TableRow>

</TableLayout>
