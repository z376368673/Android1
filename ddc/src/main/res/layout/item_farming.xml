<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/storePic"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/farming_goods_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广东高州正宗农产品店"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_subtitle" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/farming_locate"
            android:drawablePadding="5dp"
            android:drawableStart="@mipmap/farming_locate"
            android:text="115m"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/storeAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址：深圳市宝安区公明镇民生大道上辇新村明婕大厦1201"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
</LinearLayout>