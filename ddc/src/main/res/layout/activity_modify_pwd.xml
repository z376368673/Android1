<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modify_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBg"
    tools:context="com.jhobor.ddc.activity.ModifyPwdActivity">

    <include layout="@layout/bar_top" />

    <TableRow
        style="@style/tr_bg_white"
        android:layout_marginTop="15dp">

        <TextView
            style="@style/tv_weight1"
            android:text="手机号" />

        <EditText
            android:id="@+id/phone"
            style="@style/edt_weight3"
            android:hint="填写手机号"
            android:inputType="phone"
            android:maxLength="11" />
    </TableRow>

    <TableRow style="@style/tr_bg_white">

        <TextView
            style="@style/tv_weight1"
            android:text="验证码" />

        <EditText
            android:id="@+id/code"
            style="@style/edt"
            android:layout_weight="1.3"
            android:hint="填写验证码"
            android:inputType="number"
            android:maxLength="6" />

        <TextView
            android:id="@+id/getCode"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="│获取验证码"
            android:textSize="@dimen/text_size_small" />
    </TableRow>

    <TableRow style="@style/tr_bg_white">

        <TextView
            style="@style/tv_weight1"
            android:text="当前密码" />

        <EditText
            android:id="@+id/password"
            style="@style/edt_weight3"
            android:hint="请输入当前密码"
            android:inputType="textPassword"
            android:maxLength="18" />

    </TableRow>

    <TableRow style="@style/tr_bg_white">

        <TextView
            style="@style/tv_weight1"
            android:text="新密码" />

        <EditText
            android:id="@+id/newPassword"
            style="@style/edt_weight3"
            android:hint="设置新密码"
            android:inputType="textPassword"
            android:maxLength="18" />
    </TableRow>

    <TableRow style="@style/tr_bg_white">

        <TextView
            style="@style/tv_weight1"
            android:text="确认密码" />

        <EditText
            android:id="@+id/rePwd"
            style="@style/edt_weight3"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:maxLength="18" />
    </TableRow>

    <Button
        android:id="@+id/ok"
        style="@style/btn_bg_red"
        android:layout_marginTop="50dp"
        android:text="完成" />
</TableLayout>
