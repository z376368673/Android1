<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical"
    tools:context="com.jhobor.ddc.activity.LoginActivity">

    <TextView
        android:id="@+id/textView"
        style="@style/tv_title_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="登录" />

    <LinearLayout
        style="@style/ll_hz_bg"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@mipmap/login_phone_icon" />

        <EditText
            android:id="@+id/phone"
            style="@style/edt_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11" />
    </LinearLayout>

    <LinearLayout
        style="@style/ll_hz_bg"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@mipmap/login_lock_icon" />

        <EditText
            android:id="@+id/password"
            style="@style/edt_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="18" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <CheckBox
            android:id="@+id/remember"
            style="@style/cb_small_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保持登录状态" />

        <TextView
            android:id="@+id/forget"
            style="@style/tv_small_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="忘记密码？" />
    </FrameLayout>

    <Button
        android:id="@+id/login"
        style="@style/btn_white_bg"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:text="登 录" />

    <TextView
        android:id="@+id/register"
        style="@style/tv_small_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="新用户注册" />

    <TextView
        android:id="@+id/textView3"
        style="@style/tv_small_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="──────────── or ────────────" />

</LinearLayout>
