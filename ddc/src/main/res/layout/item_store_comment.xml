<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/userPic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/store_head_img" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/userPic"
        android:layout_toRightOf="@id/userPic"
        android:text="寂寞星空"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_subtitle" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="2017.01.07 10:52:53"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/userName"
        android:layout_alignStart="@id/userName"
        android:layout_below="@id/userName"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="很好吃，下次还会带朋友过来"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size" />

    <GridLayout
        android:id="@+id/commentsPictureBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/userName"
        android:layout_alignStart="@id/userName"
        android:layout_below="@id/content"
        android:columnCount="5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/takePhoto1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:src="@mipmap/store_goods_pic" />

        <ImageView
            android:id="@+id/takePhoto2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:src="@mipmap/store_goods_pic" />

        <ImageView
            android:id="@+id/takePhoto3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:src="@mipmap/store_goods_pic" />

        <ImageView
            android:id="@+id/takePhoto4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:src="@mipmap/store_goods_pic" />

        <ImageView
            android:id="@+id/takePhoto5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:src="@mipmap/store_goods_pic" />
    </GridLayout>

</RelativeLayout>