<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/bar_top"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="#999"/>

    <EditText
        android:id="@+id/with_draw_et"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_account_et"
        android:hint="请输入转让金额"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:textColorHint="#999"/>

    <EditText
        android:id="@+id/with_draw_account"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_account_et"
        android:hint="请输入接受积分的账户手机号"
        android:maxEms="11"
        android:paddingLeft="5dp"
        android:textColorHint="#999"/>

    <EditText
        android:id="@+id/with_draw_psd"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_account_et"
        android:hint="请输入账户密码"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textColorHint="#999"/>

    <TextView
        android:id="@+id/with_draw_submmit"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="20dp"
        android:background="@drawable/shape_getverfycode"
        android:gravity="center"
        android:text="确认转让"
        android:textColor="#fff"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="备注： \n         会员之间可以相互转移积分，不扣任何平台费用，当需要提现时会产生10%的手续费用.\n"
        android:textSize="18sp"/>
</LinearLayout>