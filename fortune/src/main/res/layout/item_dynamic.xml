<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
              android:background="@color/white"
    >
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dy_moneyText"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="姓名" />

        <TextView
            android:id="@+id/dy_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/doubblepadding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="---"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dy_traderText"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="等级" />

        <TextView
            android:id="@+id/dy_trader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/doubblepadding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="xxx"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="奖励金额" />

        <TextView
            android:id="@+id/dy_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/doubblepadding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:textColor="@color/red" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dy_telText"
            android:layout_width="80dp"

            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="联系电话" />

        <TextView
            android:id="@+id/dy_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/doubblepadding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="xxxxxxxxxxx"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="产生日期" />

        <TextView
            android:id="@+id/dy_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/doubblepadding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="xxxx-xx-xx xx:xx:xx"
            android:textColor="@color/black" />
    </LinearLayout>
  <!--  <View
        android:background="#AEA387"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding"
        android:layout_marginBottom="@dimen/padding"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>-->

</LinearLayout>

