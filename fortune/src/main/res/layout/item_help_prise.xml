<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="85dp"
             android:background="@color/white"
             android:columnCount="2"
             android:layout_marginTop="@dimen/dp_4"
             android:paddingLeft="20dp">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <TextView
            android:id="@+id/moneyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="得到金额"/>

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/doubblepadding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="100"/>

        <TextView
            android:id="@+id/traderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="推荐人姓名"/>

        <TextView
            android:id="@+id/trader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/doubblepadding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="xxx"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/telText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="推荐人电话"/>

        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/doubblepadding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="xxxxxxxxxxx"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="领导人姓名"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/doubblepadding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="xxx"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="领导人电话"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/leaderTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="xxxxxxxxxxx"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="完成日期"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/doubblepadding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="xxxx-xx-xx xx:xx:xx"
            android:textColor="@color/black"/>

        <!--  <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding"
              android:layout_marginRight="@dimen/padding"
              android:layout_marginTop="@dimen/paddingSmall"
              android:text="状态" />

          <TextView
              android:id="@+id/condition"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/doubblepadding"
              android:layout_marginRight="@dimen/padding"
              android:layout_marginTop="@dimen/paddingSmall"
              android:text="排队中"
              android:textColor="@color/tabActived" />-->
    </GridLayout>
</FrameLayout>