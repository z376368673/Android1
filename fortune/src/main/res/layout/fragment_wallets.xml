<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/page_bg"
    android:orientation="vertical"
    tools:context="com.jhobor.fortune.fragments.WalletsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/home_banner" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding"
                android:text="总金额"
                android:textColor="@color/red"
                android:textSize="@dimen/title" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="40sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/padding"
        android:background="@mipmap/wallets_item_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/paddingMiddle"
                android:text="理财金额"
                android:textAlignment="center"
                android:textColor="#666666"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/selfCapital"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/paddingMiddle"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/paddingSmall"
                android:text="可用金额"
                android:textAlignment="center"
                android:textColor="#999999"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/paddingSmall"
                android:text="冻结金额"
                android:textAlignment="center"
                android:textColor="#999999"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selfBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FA5E5E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/selfFreeze"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#31B104"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/padding"
        android:background="@mipmap/wallets_item_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/paddingMiddle"
                android:text="一代推广"
                android:textAlignment="center"
                android:textColor="#666666"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/oneCapital"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/paddingMiddle"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/paddingSmall"
                android:text="可用金额"
                android:textAlignment="center"
                android:textColor="#999999"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/paddingSmall"
                android:text="冻结金额"
                android:textAlignment="center"
                android:textColor="#999999"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/oneBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FA5E5E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/oneFreeze"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#31B104"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/padding"
        android:background="@mipmap/wallets_item_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/paddingMiddle"
                android:text="二代推广金额"
                android:textAlignment="center"
                android:textColor="#666666"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/twoCapital"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/paddingMiddle"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/paddingSmall"
                android:text="可用金额"
                android:textAlignment="center"
                android:textColor="#999999"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/paddingSmall"
                android:text="冻结金额"
                android:textAlignment="center"
                android:textColor="#999999"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/twoBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FA5E5E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/twoFreeze"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#31B104"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
