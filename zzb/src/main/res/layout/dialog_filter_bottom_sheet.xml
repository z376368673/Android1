<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/materialType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="素材类型"/>
    <TextView
        android:id="@+id/chartlet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/materialType"
        android:layout_toRightOf="@id/materialType"
        android:layout_toEndOf="@id/materialType"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/round_3_light_gray_border"
        android:textSize="10sp"
        android:text="贴图"/>
    <TextView
        android:id="@+id/mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/chartlet"
        android:layout_toRightOf="@id/chartlet"
        android:layout_toEndOf="@id/chartlet"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/round_3_light_gray_border"
        android:textSize="10sp"
        android:text="模型"/>

    <TextView
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/materialType"
        android:layout_alignLeft="@id/materialType"
        android:layout_alignStart="@id/materialType"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:text="本地门店"/>
    <Spinner
        android:id="@+id/chooseShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/shop"
        android:layout_alignLeft="@id/chartlet"
        android:layout_alignStart="@id/chartlet"/>
    <TextView
        android:id="@+id/store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop"
        android:layout_alignLeft="@id/materialType"
        android:layout_alignStart="@id/materialType"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:text="商&#12288;&#12288;城"/>
    <CheckBox
        android:id="@+id/chooseStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/store"
        android:layout_alignLeft="@id/chartlet"
        android:layout_alignStart="@id/chartlet"
        android:button="@drawable/cb_collect_item"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store"
        android:layout_alignLeft="@id/materialType"
        android:layout_alignStart="@id/materialType"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:text="价&#12288;&#12288;格"/>
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/price"
        android:layout_alignLeft="@id/chartlet"
        android:layout_alignStart="@id/chartlet"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/round_3_light_gray_border"
        android:textSize="10sp"
        android:text="由高到低"/>
    <TextView
        android:id="@+id/asc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/price"
        android:layout_toRightOf="@id/desc"
        android:layout_toEndOf="@id/desc"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/round_3_light_gray_border"
        android:textSize="10sp"
        android:text="由低到高"/>
    <TextView
        android:id="@+id/standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:layout_alignLeft="@id/materialType"
        android:layout_alignStart="@id/materialType"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:text="标&#8194;准&#8194;件"/>
    <CheckBox
        android:id="@+id/chooseStandard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/standard"
        android:layout_alignLeft="@id/chartlet"
        android:layout_alignStart="@id/chartlet"
        android:button="@drawable/cb_collect_item"/>
    <TextView
        android:id="@+id/customize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/standard"
        android:layout_alignLeft="@id/materialType"
        android:layout_alignStart="@id/materialType"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:text="定&#8194;制&#8194;件"/>
    <CheckBox
        android:id="@+id/chooseCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/customize"
        android:layout_alignLeft="@id/chartlet"
        android:layout_alignStart="@id/chartlet"
        android:button="@drawable/cb_collect_item"/>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/customize"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_5_gray_bg"
        android:textSize="18sp"
        android:text="重置"/>
    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/customize"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_5_purple_bg"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="完成"/>

</RelativeLayout>