<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@color/white"
    tools:context="com.jhobor.zzb.HallActivity">

    <include android:id="@+id/header" layout="@layout/bar_header"/>
    <FrameLayout
        android:id="@+id/floatBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="门店"/>
        <TextView
            android:id="@+id/material"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="获取素材"/>
        <TextView
            android:id="@+id/collect"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="收藏"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_gravity="top"
        android:background="@color/line"/>
    </FrameLayout>
    <com.jhobor.zzb.view.ObservableScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/floatBar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="360dp"/>
            <TextView
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_alignBottom="@id/viewPager"
                android:layout_alignRight="@id/viewPager"
                android:layout_alignEnd="@id/viewPager"
                android:layout_margin="20dp"
                android:text="1/5"/>
            <RelativeLayout
                android:id="@+id/infoBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewPager">
            <TextView
                android:id="@+id/ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_margin="10dp"
                android:textSize="10sp"
                android:text="广告"
                android:textColor="@color/grayText"
                android:background="@drawable/round_3_light_gray_border"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_alignBottom="@id/ad"
                android:layout_toRightOf="@id/ad"
                android:layout_toEndOf="@id/ad"
                android:textSize="16sp"
                android:text="建材"/>
            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayText"
                android:layout_below="@id/ad"
                android:layout_alignLeft="@id/ad"
                android:layout_alignStart="@id/ad"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:textSize="12sp"
                android:text="白色 土耳其 光面 乱纹 18mm厚 定制加工"/>

            <TextView
                android:id="@+id/chartlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                android:padding="3dp"
                android:text="贴图"
                android:background="@drawable/round_2_purple_bg"/>
            <TextView
                android:id="@+id/choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/chartlet"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:padding="3dp"
                android:text="选择"
                android:background="@drawable/round_2_purple_bg"/>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_below="@id/choice"
                android:background="@color/line"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_below="@id/line"
                android:layout_margin="10dp"
                android:text="￥200-300（M2）"/>
            <TextView
                android:id="@+id/productNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/price"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/grayText"
                android:textSize="10sp"
                android:text="货号：DLS15688"/>
            </RelativeLayout>
            <View
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/line"
                android:layout_below="@id/infoBox"/>
            <FrameLayout
                android:id="@+id/nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/space">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/product"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textColor="@color/purple"
                        android:text="商品"/>
                    <View
                        android:layout_width="0.6dp"
                        android:layout_height="match_parent"
                        android:background="@color/line"/>
                    <TextView
                        android:id="@+id/details"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:gravity="center"
                        android:text="详情"/>
                    <View
                        android:layout_width="0.6dp"
                        android:layout_height="match_parent"
                        android:background="@color/line"/>
                    <TextView
                        android:id="@+id/store"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:gravity="center"
                        android:text="商铺"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/line"
                    android:layout_gravity="bottom"/>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/imagesOfDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/nav"/>
            <com.jhobor.zzb.view.InlineGridView
                android:id="@+id/products"
                android:layout_below="@id/imagesOfDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"/>
        </RelativeLayout>
    </com.jhobor.zzb.view.ObservableScrollView>
    <FrameLayout
        android:id="@+id/hideNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="invisible"
        android:layout_below="@id/header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hideProduct"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:text="商品"/>
            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/line"/>
            <TextView
                android:id="@+id/hideDetails"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:text="详情"/>
            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/line"/>
            <TextView
                android:id="@+id/hideStore"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:text="商铺"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/line"
            android:layout_gravity="bottom"/>
    </FrameLayout>
</RelativeLayout>
